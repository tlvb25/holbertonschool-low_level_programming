CC = gcc
SRC = main.c holberton.c
OBJ = $(SRC:.c=.o)
NAME = holberton
RM = rm -f

all : $(OBJ)
        $(CC) $(OBJ) -o $(NAME)

clean:
        $(RM) *~ $(NAME)

oclean:
        $(RM) $(OBJ)

fclean:
        $(RM) *~ $(NAME) $(OBJ)

fclean: clean oclean

re: oclean $(OBJ)
        $(CC) $(OBJ) -o $(NAME)
